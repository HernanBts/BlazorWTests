@page "/countries/details/{CountryId:int}"

@if (country is null)
{
    <Loading />
}
else
{
    <h3>@country.Name</h3>

    <div class="mb-3">
        <a class="btn btn-primary" href="/states/create/@country.Id">Nueva Provincia</a>
        <a class="btn btn-success" href="/countries/create">Volver</a>
    </div>

    <h3>Provincias</h3>
    <GenericList MyList="country.States!.ToList()">
        <Body>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Provincia</th>
                        <th>Ciudades</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in country.States!)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.CitiesNumber</td>
                            <td>
                                <a href="/states/edit/@item.Id" class="btn btn-warning btn-sm">Editar</a>
                                <button class="btn btn-info btn-sm">Detalle</button>
                                <button @onclick=@(() => DeleteAsync(item)) class="btn btn-danger btn-sm">Borrar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </Body>
    </GenericList>
}