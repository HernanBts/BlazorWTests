@page "/states/details/{StateId:int}"

@if (state is null)
{
    <Loading />
}
else
{
    <h3>@state.Name</h3>

    <div class="mb-3">
        <a class="btn btn-primary" href="/cities/create/@state.Id">Nueva Ciudad</a>
        <a class="btn btn-success" href="/countries/details/@state.CountryId">Volver</a>
    </div>

    <h3>Ciudades</h3>
    <GenericList MyList="state.Cities!.ToList()">
        <Body>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Ciudad</th>
                        <th>Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in state.Cities!)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>
                                <a href="/cities/edit/@item.Id" class="btn btn-warning btn-sm">Editar</a>
                                <button @onclick=@(() => DeleteAsync(item)) class="btn btn-danger btn-sm">Borrar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </Body>
    </GenericList>
}