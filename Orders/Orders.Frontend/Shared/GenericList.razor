@typeparam Titem

@if (MyList is null)
{
    @if (Loading is null)
    {
        <Loading />
    }
    else
    {
        @Loading
    }
}
else if (MyList.Count == 0)
{
    @if (NoRecords is null)
    {
        <h4>No hay registros para mostrar...</h4>
    }
    else
    {
        @NoRecords
    }
}
else
{
    @Body
}